
<!-- Home page -->
 <!-- Dsiplay details(title, release year, rating out of ten) of 9 random movies  -->
  <!--Clicking on that movie should bring you to the movie page for that movie-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies</title>
    <link rel="stylesheet" href="/path/to/your/style.css"> 
</head>
<body>
    <%- include('partials/header') %> 
    <div class="banner-container">
        <div class="banner-content">
            <img src="/images/philly-movies-hero-banner.jpg" alt="Movie Banner" class="banner-image">
            <img src="/images/philly-movies-hero-banner.jpg" alt="Movie Banner" class="banner-image">
        </div>
    </div>
    <h1 class="head_title">Movies</h1> 
    
    <div class="movieContainer">
        <% movies.forEach(movie => { %>
            <div class="movieItem">
                <img src="<%= movie.image %>" alt="<%= movie.title %> Poster" class="poster">
                <h2><a href="/movie/<%= movie.id %>"><%= movie.title %></a></h2>
                <p><strong>Release Year:</strong> <%= movie.releaseYear %></p>
                <p><strong>Genre:</strong> <%= movie.genre %></p>
                <p><strong>Rating:</strong>
                    <span class="star-rating">
                        <% for (let i = 1; i <= 10; i++) { %>
                            <span class="star <%= movie.rating >= i ? 'filled' : '' %>">&#9733;</span>
                        <% } %>
                    </span>
    
                </p>
            </div>
        <% }); %>
    </div>
</body>
</html>
